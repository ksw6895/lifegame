{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/index.html",
            "use": "@vercel/static"
        },
        {
            "src": "frontend/style.css",
            "use": "@vercel/static"
        },
        {
            "src": "frontend/script.js",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/main.py"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/index.html",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/style.css",
            "dest": "/frontend/style.css"
        },
        {
            "src": "/script.js",
            "dest": "/frontend/script.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html" 
        }
    ]
}
