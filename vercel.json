{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "public",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/main.py"
        },
        {
            "src": "/",
            "dest": "/index.html"
        },
        {
            "src": "/index.html",
            "dest": "/index.html"
        },
        {
            "src": "/style.css",
            "dest": "/style.css"
        },
        {
            "src": "/script.js",
            "dest": "/script.js"
        },
        {
            "src": "/(.*)", 
            "dest": "/index.html" 
        }
    ]
}
