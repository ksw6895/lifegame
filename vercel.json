{
    "version": 2,
    "builds": [
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/main.py"
        },
        {
            "src": "/",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/index.html",
            "dest": "/frontend/index.html"
        },
        {
            "src": "/(.+\\.css)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.+\\.js)",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}
